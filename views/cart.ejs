    <title>E-Commerce</title>

    <link rel="stylesheet" href="/css/cart.css" />

</head>

<body>


    
    <br><br><br>


    <div class="cartheading">
        <h1>Cart</h1>
    </div>
    <section id="cart">
        <div class="container_cart ">
            <div class="row">
                <div class="col-md-8">
                    <form action="\checkout" method="post">
                        <input type="hidden" name="productid" value="<%= id %>">
                        <div class="mb-3">
                            <div class="pt-4">
                                <div class="row mb-4">
                                    <div class="col-md-5 col-lg-3 col-xl-3">
                                        <div class="rounded mb-3 mb-md-0">
                                            <img class="img-fluid w-100 rounded" src="<%= i[0].imgurl %>"
                                                alt="Sample">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-lg-9 col-xl-9">
                                        <div>
                                            <div class="d-flex justify-content-between cartcontent">
                                                <div>
                                                    <h5> <input type="hidden" name="proname" value="<%= i[0].name %>"> <%= i[0].name %></h5>
                                                    
                                                </div>
                                                <div>
                                                    <div class="mb-0 w-100">
                                                        <label for="quantity">Quantity:   </label>
                                                        <input class="quantity text-center"name="quantity"
                                                            type="number">
                                                        
                                                    </div>
                                                   
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                               <br><br><br>
                                                <p class="mb-0 price_cart"><span><strong id="summary">Price:  â‚¹<input type="number" name="price" value="<%= i[0].price %>" readonly></strong></span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Go to checkout</button>
                    </form>
                </div>
                
            </div>
        </div>
    </section>







</body>

</html>